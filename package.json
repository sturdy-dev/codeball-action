  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "@octokit/action": "^4.0.6",
    "@octokit/core": "^4.0.5",
    "@octokit/plugin-rest-endpoint-methods": "^6.3.0",
    "node-fetch": "^3.2.10"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^16.10.5",
    "@typescript-eslint/parser": "^5.26.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.16.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^26.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.6.0",
    "ts-jest": "^28.0.0",
    "typescript": "^4.6.4"
  }
